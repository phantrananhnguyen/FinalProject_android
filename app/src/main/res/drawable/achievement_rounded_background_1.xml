    <solid android:color="#D3D3D3" /> <!-- Thay đổi màu theo ý muốn -->

    <!-- Độ bo tròn của các góc -->
    <corners android:radius="20dp" /> <!-- Điều chỉnh độ bo tròn ở đây -->

    <!-- Đường viền nếu cần thiết -->
    <stroke
        android:width="2dp"
        android:color="@color/white" /> <!-- Thay đổi màu đường viền theo ý muốn -->
</shape>
