    <solid android:color="#FFFFFF" /> <!-- Thay đổi màu theo ý muốn -->

    <!-- Độ bo tròn của các góc -->
    <corners android:radius="16dp" /> <!-- Điều chỉnh độ bo tròn ở đây -->

    <!-- Đường viền nếu cần thiết -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Thay đổi màu đường viền theo ý muốn -->
</shape>
