
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hiệu ứng khi nhấn vào item -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Màu xám nhạt khi nhấn -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Hiệu ứng khi chọn item -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Màu xám khi chọn -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Nền mặc định của item -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền trắng mặc định -->
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#DDDDDD"/> <!-- Viền xám nhạt -->
        </shape>
    </item>
</selector>
