<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".HistoryPotholeActivity">

    <!-- Search and filter layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="298dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="61dp"
            android:elevation="2dp"
            android:background="@drawable/rounded_search_bar">

            <RelativeLayout
                android:id="@+id/magnifying"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_search" />

            <TextView
                android:id="@+id/placeholder"
                android:layout_width="214dp"
                android:layout_height="22dp"
                android:layout_toEndOf="@id/magnifying"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/mont_regu"
                android:text="Find in history"
                android:gravity="center"
                android:textSize="15sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ic_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/search"
            android:layout_alignBottom="@id/search"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_filter"
            android:padding="8dp"/>
    </RelativeLayout>

    <!-- TabLayout for selecting history categories -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="131dp"
        android:background="#FFFFFF"
        android:contentDescription="Tab layout for selecting history categories">

        <!-- Tab for Potholes -->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabPotholes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potholes"
            android:fontFamily="@font/mont_regu"
            android:contentDescription="Potholes tab for viewing pothole history"/>

        <!-- Tab for Point Plus -->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabPointPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point Plus"
            android:fontFamily="@font/mont_regu"
            android:contentDescription="Point Plus tab for viewing additional points"/>
    </com.google.android.material.tabs.TabLayout>

    <!-- Container for content below TabLayout -->
    <RelativeLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:background="#C7E6F3">

        <!-- ViewPager2 for dynamically loading the content -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>
