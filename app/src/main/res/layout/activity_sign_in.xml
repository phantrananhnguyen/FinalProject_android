<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#528FB2">
    <ImageView
        android:layout_width="348dp"
        android:layout_height="287dp"
        android:src="@drawable/map50"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:scaleX="1.1"
        android:src="@drawable/city"/>
    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/cardview"
        android:layout_marginBottom="70dp"
        android:text="SIGN IN"
        android:textColor="@color/white"
        android:textAppearance="@style/title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <ImageButton
            android:id="@+id/back_si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_btn"
            android:src="@drawable/back"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="312dp"
        android:layout_height="341dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        app:cardCornerRadius="20dp"
        android:elevation="4dp"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/contain_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_edittext">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="13dp"
                        android:src="@drawable/user"/>
                    <EditText
                        android:id="@+id/username_signin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:hint="Username"
                        android:textColor="#001645"
                        android:textColorHint="#7F001645"

                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/cardview1"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_edittext">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="13dp"
                        android:src="@drawable/lock"/>
                    <EditText
                        android:id="@+id/password_signIn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:hint="Password"
                        android:textColor="#001645"
                        android:textColorHint="#7F001645"

                        android:inputType="textPassword"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        />
                    <ImageButton
                        android:id="@+id/showpass_si"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/eyeclosed"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/cardview2"
                android:layout_marginTop="8dp"
                >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="13dp"
                    android:background="@android:color/transparent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Remember Me"
                    android:textSize="14sp"
                    android:textAppearance="@style/normal_word"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/forgot_txt"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="15dp">
                <Button
                    android:id="@+id/signInButton"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="@color/white"
                    android:textAppearance="@style/action_word"
                    android:background="@drawable/custom_btn"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/forgot_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/normal_word"
                android:layout_marginBottom="30dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
