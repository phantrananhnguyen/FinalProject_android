<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation = "0dp"
    android:background="@color/white"
    android:padding="16dp">

    <View
        android:id="@+id/whiteFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_top_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation = "1dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/report_back_btn"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/report_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/rankingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bảng xếp hạng"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/light_blue"

        android:fontFamily="@font/mont_semibold"

        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstPlace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/achievement_rounded_background_1"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/rankingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/secondPlace"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="150dp"
        app:layout_constraintHorizontal_chainStyle="spread">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/firstAchievementsImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/road_warrior"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/firstTitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/firstTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bích Quyên"
            android:fontFamily="@font/mont_regu"
            android:textColor="#1A237E"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/firstScoreText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/firstScoreText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score: 50"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondPlace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/achievement_rounded_background"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@id/firstPlace"
        app:layout_constraintStart_toEndOf="@id/firstPlace"
        app:layout_constraintEnd_toStartOf="@id/thirdPlace"
        android:layout_marginHorizontal="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/secondAchievementsImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/road_warrior"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/secondTitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/secondTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bích Quyên"
            android:fontFamily="@font/mont_regu"
            android:textColor="#1A237E"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/secondScoreText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/secondScoreText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score: 50"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/thirdPlace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/achievement_rounded_background_2"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@id/firstPlace"
        app:layout_constraintStart_toEndOf="@id/secondPlace"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/thirdAchievementsImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/road_warrior"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/thirdTitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/thirdTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bích Quyên"
            android:fontFamily="@font/mont_regu"
            android:textColor="#1A237E"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/thirdScoreText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/thirdScoreText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score: 50"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>